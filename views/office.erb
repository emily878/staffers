<div class="office_header <%= office.type %>">
<% if office.type == 'member' %>
  <% legislator = office['legislator'] %>
  <img src="http://assets.sunlightfoundation.com/moc/100x125/<%= legislator['bioguide_id'] %>.jpg" />
  <div class="details">
    <h2 class="office legislator"><%= office.name %></h2>
    <span>
      <%= party_names[legislator['party']] %> from 
      <%= state_codes[legislator['state']] %>, 
      <% if legislator['title'] == 'Sen' %>
        <%= legislator['district'] %>
      <% else %>
        <%= legislator['district'].to_i == 0 ? "At-Large" : "District #{legislator['district']}" %>
      <% end %>
    </span>
    <span class="phone"><%= office['phone'] %></span>
    <span class="room"><%= room_for office['building'], office['room'] %></span>
  </div>
<% else %>
  <div class="details">
    <h2 class="office"><%= office.name %></h2>
    <span class="phone"><%= office['phone'] %></span>
    <span class="room"><%= room_for office['building'], office['room'] %></span>
  </div>
<% end %>

<!-- basic office info here -->

<% quarters.keys.sort.reverse.each do |quarter| %>
  <% staffers = quarters[quarter] %>
  
  <h3 class="quarter"><%= format_quarter quarter %></h3>
  
  <table class="quarter" id="<%= quarter %>">
    <% if staffers.any? %>
      <% staffers.each do |staffer| %>
        
        <% positions = staffer.quarters[quarter] %>
        <% positions.each do |position| %>
          <tr class="<%= "line" if positions.last.object_id == position.object_id %>">
            <td>
                <% if positions.first.object_id == position.object_id %>
                  <a href="/staffer/<%= staffer._id %>"><%= list_name staffer %></a>
                <% end %>
              </td>
            <td>
              <%= capitalize position['title'] %>
            </td>
          </tr>
        <% end %>
        
      <% end %>
    <% else %>
      No staffers listed for this quarter.
    <% end %>
  </table>
  
<% end %>