<div class="search">
  <form action="/staffers" method="get">

    <h3>Search for staffers</h3>
    
    <table class="search">
      <tr>
        <td>
          <label for="quarter">Quarter:</label>
        </td><td>
          <%= quarter_select %>
        </td>
      </tr><tr>
        <td>
          <label for="firstname">First name:</label>
        </td><td>
          <input type="text" name="firstname" id="firstname" />
        </td>
      </tr><tr>
        <td>
          <label for="lastname">Last name:</label>
        </td><td>
          <input type="text" name="lastname" id="lastname" />
        </td>
      </tr><tr>
        <td>
          <label for="title">Title:</label>
        </td><td>
          <input type="text" name="title" id="title" />
          <a href="#" class="jqModal">Choose from a list</a>
        </td>
      </tr><tr>
        <td>
          <label for="state">State:</label>
        </td><td>
          <%= state_select %>
        </td>
      </tr><tr>
        <td>
          <label for="party">Party:</label>
        </td><td>
          <%= party_select %>
        </td>
      </tr><tr>
        <td colspan="2">
          <input type="submit" value="Search" class="search" />
        </td>
      </tr>
    </table>
  </form>
</div>

<div class="offices">
  <h3>Or view a list of offices</h3>
  <ul>
    <li>
      <a href="/legislators">Members</a>
    </li>
    <li>
      <a href="/committees">Committees</a>
    </li>
    <li>
      <a href="/offices">Other Offices</a>
    </li>
  </ul>
</div>

<!-- popup window for title list -->
<script type="text/javascript">
  $().ready(function() {
    $('#dialog').jqm();
    
    $("#dialog a").click(function() {
      $("#title").val($.trim($(this).text()));
      $("#dialog").jqmHide();
      return false;
    });
  });
</script>

<div class="jqmWindow" id="dialog">
  <table class="titles">
    <% titles.each do |title| %>
      <tr>
        <td>
          <a href="#">
            <%= capitalize title.name %>
          </a>
        </td>
      </tr>
    <% end %>
  </table>
</div>