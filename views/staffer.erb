<h2 class="staffer"><%= display_name staffer %></h2>

<% staffer['quarters'].keys.sort.reverse.each do |quarter| %>
  <% positions = staffer['quarters'][quarter] %>
  
  <h3 class="quarter"><%= format_quarter quarter %></h3>
  
  <table class="quarter staffer">
    <% positions.each do |position| %>
      <tr class="line">
        <td>
          <%= capitalize position['title'] %>
        </td>
        <td>
          <a href="/office/<%= position['office']['_id'] %>">
            <%= position['office']['name'] %>
          </a>
        </td>
        <td>
          <%= position['office']['phone'] %>
        </td>
        <td>
          <%= room_for position['office']['building'], position['office']['room'] %>
        </td>
      </tr>
    <% end %>
  </table>
  
<% end %>